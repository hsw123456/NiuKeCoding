package com.niuke.test;

import java.util.Scanner;

public class JiaMi {
	

    public static void main(String[] args){
        
        Scanner input = new Scanner(System.in);
         int count = 0;
        String[] str ;
        while(input.hasNext()){
            count = Integer.parseInt(input.nextLine());
            str = new String[count];
            for(int i = 0; i< count; i++){
                str[i] = input.nextLine();
            }
            
            String[] newStr = jiaMi(str);
            
            for(int i = 0;i<newStr.length; i++){
            	for(int j =0; j<newStr[i].length(); j++){
            		System.out.print(newStr[i].charAt(j));
            	}
            	
            	System.out.println();
            }
            
        }
        
        
    }
    
    public static String[] jiaMi(String[] str){
    	
    	String[] newStr = str;
    	
    	for(int i = 0; i<newStr.length;i++){
    		for(int j = 0; j<newStr[i].length();j++){
    			int thisChar = newStr[i].charAt(j);
    			if(thisChar>=65&&thisChar<90 ||thisChar>=97&&thisChar<122){
    				thisChar = thisChar + 1;
    			}else if (thisChar == 'Z') {
					thisChar = 65;
				}else if (thisChar == 'z') {
					thisChar = 97;
				}
    		}
    	}
    	
    	return newStr;
    }
}


